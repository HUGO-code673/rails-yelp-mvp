
<h1><%= @restaurant.name %></h1>
<%= link_to ' new review', new_restaurant_review_path(@restaurant) %>
<p>Adresse : <%= @restaurant.address %></p>
<p>Téléphone : <%= @restaurant.phone_number %></p>
<p>Catégorie : <%= @restaurant.category %></p>

<h2>Reviews</h2>
<% @restaurant.reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= review.rating %></p>
<% end %>

<%= link_to ' back to restaurant list', restaurants_path %>
